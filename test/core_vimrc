set nocompatible
filetype plugin  on

let g:xptemplate_debug_log = './xpt-debug.log'

let g:_xpt_path = expand("<sfile>:h:h")
exe "set runtimepath+=" . g:_xpt_path

set noswapfile
set list
set listchars=tab:].,trail:\|,extends:<,precedes:>
set number

let s:profile = $XPT_PROFILE
if s:profile == 1
    let profile_path = $HOME . '/xpt-prof.txt'
    exe 'profile start ' . profile_path
    profile func xpt*
endif
